# ~/.mpdconf

# files and directories
music_directory		  "/home/seed419/music"
playlist_directory  "/home/seed419/.mpd/playlists"
db_file             "/home/seed419/.mpd/mpd.db"
state_file          "/home/seed419/.mpd/mpdstate"
sticker_file			  "/home/seed419/.mpd/sticker.sql"
pid_file            "/home/seed419/.mpd/mpd.pid"

# general
user                "seed419"
bind_to_address		  "127.0.0.1"
port				        "6600"
auto_update	        "yes"

# input
input {
  plugin "curl"
}

# output
audio_output {
	type		        "alsa"
	name		        "Alsa"
	device		      "hw:0,0"
	format		      "44100:16:2"
	mixer_type      "software"
}

audio_output {
  type            "fifo"
  name            "fifo"
  path            "/tmp/mpd.fifo"
  format          "44100:16:2"  
}

audio_output_format  "44100:16:2"
