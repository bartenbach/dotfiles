# vim: set ft=gitconfig noet:

[user]
	name = Blake Bartenbach
	email = blakebartenbach@gmail.com

[color]
  ui = true
  branch = true
  showbranch = true
  diff = true
  interactive = true
  status = true
  grep = yes

[color "status"]
  added = green
  changed = red
  untracked = yellow

[merge]
  tool = vimdiff
  log = true

[help]
  autocorrect = 1

[log]
  decorate = full

[diff]
  rename = copies

[core]
	quotepath = off
	editor = vim
