# vim: ft=zsh
#
# File: ~/.zprompt
# Description: Prompt for zsh shell
# Author: Blake Bartenbach
#
autoload -Uz vcs_info

precmd() { 
  vcs_info
  PROMPT="%{$fg_no_bold[green]%}[blake.%m] %~ [proxy: ${CURRENT_PROXY:-none}] ${vcs_info_msg_0_}"$'\n'"%# %{$fg[white]%}"
}

zstyle ':vcs_info:git:*' formats '(%b)'

setopt PROMPT_SUBST
