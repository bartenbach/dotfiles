!
! File: ~/.Xresources
! Description: Terminal and X settings
! Author: proxa
!

! [Cursor theme] 
Xcursor*theme: Vanilla-DMZ

! [URxvt - General Settings]
URxvt*font: xft:terminus:pixelsize=15:antialias=false
URxvt*boldFont:
URxvt*italicFont:
URxvt*boldItalicFont:
URxvt*buffered: true
URxvt*saveLines: 512
URxvt*visualBell: false
URxvt*cursorBlink:true
URxvt*internalBorder: 1
URxvt*externalBorder: 0
URxvt*borderless: true
URxvt*meta: ignore
URxvt*meta8: false
URxvt*iso14755: false
URxvt*iso14755_52: false
URxvt*pointerBlank: true
URxvt*pointerBlankDelay: 1
URxvt*cutchars: "()*,<>[]{}|'"
URxvt*lineSpace: 2
URxvt*tripleclickwords: true
URxvt*urgentOnBell: true

! [URxvt - Scrolling]
URxvt*skipScroll: false
URxvt*scrollBar: false
URxvt*scrollTtyOutput: false
URxvt*scrollWithBuffer: false
URxvt*scrollTtyKeypress: true
URxvt*mouseWheelScrollPage: false

! [URxvt - Perl Plugins]
URxvt*perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt*urlLauncher: /usr/bin/chromium
URxvt*url-select.launcher: /usr/bin/chromium
URxvt*url-select.underline: true
URxvt*url-select.button: 2
URxvt*keysym.C-u: perl:url-select:select_next
URxvt*keysym.Mod4-v: perl:keyboard-select:activate
URxvt*keysym.Mod4-s: perl:keyboard-select:search

! [Misc]
URxvt*insecure: false
URxvt*utmpInhibit: true
!URxvt*print-pipe: cat > $(TMPDIR=$HOME mktemp urxvt.XXXXXX)

! [Color Scheme]
URxvt*background: #000
URxvt*foreground: #fff
URxvt*cursorColor: #bbb
URxvt*colorUL: #4682B4
#include ".config/xcolors/proxa_theme"
