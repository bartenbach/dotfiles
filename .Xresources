!+++++++++++++++
! Cursor theme 
!+++++++++++++++
Xcursor*theme: Vanilla-DMZ

!++++++++++++++++++++++++++++++++++++++++
! URxvt Configuration - General Settings
!++++++++++++++++++++++++++++++++++++++++
URxvt*saveLines: 1200

! Scrolling
URxvt*scrollBar: false
URxvt*scrollstyle: plain
URxvt*secondaryScroll: true
URxvt*scrollTtyOutput: false

! Cursor
URxvt*cursorBlink:true
!URxvt*cursorUnderline:true

! Font
URxvt*font:-misc-proggycleanttszbp-medium-r-normal--0-0-0-0-c-0-iso8859-1
!URxvt*boldFont:

! Icon file
!URxvt*iconFile: /home/seed419/img/icons/dollar.png

! Real Transparency
!URxvt*depth: 32
!URxvt*background: [90]#000000

! Fake Transparency
URxvt*transparent: true
URxvt*shading: 20

! Crafty stuff - perl
URxvt*perl-ext-common: default,matcher,clipboard
URxvt*urlLauncher: /usr/bin/chromium
URxvt*matcher.button: 1

! Colors
URxvt*foreground: Gray
!URxvt*colorBD:          #ffffff
!URxvt*cursorColor:      #e0e080
URxvt*throughColor:     #8080f0
!URxvt*highlightColor:   #f0f0f0
URxvt*underlineColor:   yellow

! Not even sure...
URxvt*meta:             ignore
URxvt*utmpInhibit:      true
URxvt*mapAlert:         true
