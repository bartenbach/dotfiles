# vim: set ft=sh ts=2 sw=2 et:
#
# ~/.aliases
#
export LESS='Rb-1Jj2MW#.01'

alias grep='grep --color'
alias ls='ls -G'
alias sd='systemctl'
alias mv='mv -i'
alias feh="feh -Tproxa --geometry 1580x880 --cycle-once --draw-tinted -Y -. -B black --info \"echo -e 'Name:%n [%u/%l] Filesize:%S Size:%w/%h Type:%t'\""
alias cls='clear'
alias dmesg='dmesg --color=always'
alias less='less -R -b-1 -J -j2 -M -W "-#.01"'
alias mpv='mpv --no-sub'
alias pkgfile='pkgfile -v'
#alias lsblk='lsblk -Spo +size' this doesn't print devices sometimes
alias wakeup='wol 30:5A:3A:56:3A:1B'
#alias xlock='xscreensaver-command -lock'

# typo troll trains
sl='sl -l'
alias sl=$sl
alias vmi=$sl
alias claer=$sl
alias sdl=$sl
alias pamcan=$sl
