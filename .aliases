# vim: set ft=sh ts=2 sw=2 et:
#
# ~/.aliases
#

# main
alias grep='grep --color'
alias ls='ls --group-directories-first --color --human-readable -F'
alias sd='systemctl'
alias mv='mv -i'
alias feh='feh -Tproxa'
alias cls='clear'
alias git-log="git log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"

# centos
alias yum='yum --color=always'

# tmux commands are too long
alias tl='tmux list-sessions'
alias ta='tmux attach-session -t'
alias tn='tmux new-session -s'

# typo trains
alias sl='sl -l'
alias vmi='sl -F'
alias claer='sl -l'
alias aslamixer='sl -l'
