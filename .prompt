#-----------
# Variables
#-----------
name='proxa'
host=''
PS1_DEBUG=0

#-----------------
# Git integration
#-----------------
GIT_PS1_SHOWDIRTYSTATE='walrus'
GIT_PS1_SHOWSTASHEDSTATE='buffalo'
GIT_PS1_SHOWUNTRACKEDFILES='tiger'
GIT_PS1_SHOWUPSTREAM='verbose git'

#------------------------------
# Use custom name if it exists
#------------------------------
function get_username {
  [[ -z $name ]] && name="\u"
}

#------------------------------
# Use custom host if it exists
#------------------------------
function get_hostname {
  [[ -z $host ]] && host="\h"
}

#--------------
# Return value
#--------------
function get_ret_val {
  if [[ "$?" == "0" ]];then
    RET=$igreen
  else
    RET=$red
  fi
  assemble
}

#--------------
# Gets the pwd
#--------------
function get_pwd {
  [[ $TERM != "linux" ]] && echo -en "\033]0;$PWD\007"
}

#-----------
# Debugging
#-----------
function debug {
  [[ $PS1_DEBUG == 1 ]] && echo $PS1
}

#--------------------
# Set prompt command
#--------------------
PROMPT_COMMAND='get_ret_val && debug && get_pwd'

#----------
# Assemble
#----------
function assemble {
  if [ $EUID -eq 0 ];then
    PS1="$ired[root] \w${yellow}$(__git_ps1) ${RET}\\\$ $reset"
  else
    PS1="$igreen[$name.$host] \w${yellow}$(__git_ps1) ${RET}\\\$ $reset"
  fi
}

#------
# Main
#------
get_username
get_hostname
assemble >/dev/null 2>&1

#-----------------
# Save the whales
#-----------------
unset _

