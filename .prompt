#==================
# Color formatting
#==================
Reset='\e[0m'
Red='\e[0;31m'
Green='\e[0;32m'

#=============================
# Prompt name and prompt host  
#=============================
_name='proxa'
_host=''

#=================
# Git integration //TODO  
#=================
_git='$(__git_ps1 " (%s)")\$ '

#=================
# Set user colors 
#=================
function get_color {
  if [ $EUID -eq 0 ];then
    _color=$Red
  else
    _color=$Green
  fi
}

#==============================
# Use custom name if it exists
#==============================
function get_username {
  if [ -z $_name ];then
    $_name="\u"
  fi
}

#==============================
# Use custom host if it exists
#==============================
function get_hostname {
  if [ -z $_host ];then
    _host="\h"
  fi  
}

#==========
# Assemble
#==========
get_color
get_username
get_hostname
if [ $EUID -eq 0 ];then
  PS1="\[$_color\][root] \w \\\$ \[$Reset\]"
else
  PS1="\[$_color\][$_name.$_host] \w \\\$ \[$Reset\]"
fi

#===========
# Debugging
#===========
PS1_DEBUG=0
if [ $PS1_DEBUG == 1 ];then
  echo $PS1
fi

#==============
# Housekeeping
#==============
unset get_color
unset get_username
unset get_hostname
unset _color
unset _name
unset _host
unset _git
unset PS1_DEBUG

